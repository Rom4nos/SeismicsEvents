<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.GridPane?>
<GridPane stylesheets="/styles.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.databasetest.HelloController">
    <VBox alignment="CENTER" prefHeight="639.0" prefWidth="667.0" spacing="20.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <BarChart fx:id="barChart"  prefWidth="627.0">
            <xAxis>
                <CategoryAxis side="BOTTOM" />
            </xAxis>
            <yAxis>
                <NumberAxis side="LEFT" />
            </yAxis>
        </BarChart>

        <Label fx:id="welcomeText" />
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Select the Year" style="-fx-fill: white;" />
        <ComboBox fx:id="years" prefHeight="26.0" prefWidth="118.0" promptText="Year" />
        <Button fx:id="viewTable" mnemonicParsing="false" text="View table" />
        <Button fx:id="loadInfo" mnemonicParsing="false" text="Load Info"/>
    </VBox>
</GridPane>
